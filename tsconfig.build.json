{
  // This file is used to compile the for cjs and esm (see package.json build scripts). It should exclude all test files.
  "extends": "./tsconfig.base.json",
  "include": ["package"],
  "exclude": [
    "package/**/*.test.ts",
    "package/**/*.test-d.ts",
    "package/**/*.bench.ts"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./package"
  }
}
