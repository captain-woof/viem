{
  "workspaces": ["examples/*", "package", "playgrounds/*", "site", "test"],
  "private": true,
  "scripts": {
    "bench": "vitest bench",
    "bench:ci": "CI=true vitest bench",
    "build": "bun run clean && bun run build:cjs && bun run build:esm && bun run build:types",
    "build:cjs": "tsc --project ./tsconfig.build.json --module commonjs --outDir ./package/_cjs --removeComments --verbatimModuleSyntax false && echo > ./package/_cjs/package.json '{\"type\":\"commonjs\"}'",
    "build:esm": "tsc --project ./tsconfig.build.json --module es2015 --outDir ./package/_esm && echo > ./package/_esm/package.json '{\"type\":\"module\",\"sideEffects\":false}'",
    "build:types": "tsc --project ./tsconfig.build.json --module esnext --declarationDir ./package/_types --emitDeclarationOnly --declaration --declarationMap",
    "changeset": "changeset",
    "changeset:release": "bun run build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only && bun scripts/updateVersion.ts",
    "clean": "rimraf package/_esm package/_cjs package/_types",
    "contracts:build": "wagmi generate -c ./test/wagmi.config.ts",
    "dev:docs": "cd site && bun run dev",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "bun run lint --apply",
    "postinstall": "bun run contracts:build",
    "prepare": "bun x simple-git-hooks",
    "size": "size-limit",
    "test": "vitest -c ./test/vitest.config.ts dev",
    "test:cov": "vitest dev -c ./test/vitest.config.ts --coverage",
    "test:ci": "CI=true vitest -c ./test/vitest.config.ts --coverage --retry=3 --bail=1",
    "test:typecheck": "SKIP_GLOBAL_SETUP=true vitest typecheck -c ./test/vitest.config.ts",
    "test:ui": "vitest dev -c ./test/vitest.config.ts --ui",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@biomejs/biome": "^1.0.0",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.2",
    "@size-limit/preset-big-lib": "^8.2.4",
    "@types/fs-extra": "^9.0.13",
    "@viem/anvil": "0.0.5",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "@wagmi/cli": "^0.1.6",
    "ethers": "^5.7.2",
    "ethers@6": "npm:ethers@^6.0.2",
    "fs-extra": "^10.1.0",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^8.2.4",
    "typescript": "5.0.4",
    "vite": "^4.4.2",
    "vitest": "~0.34.3"
  },
  "size-limit": [
    {
      "name": "viem (cjs)",
      "path": "./package/_cjs/index.js",
      "limit": "73 kB"
    },
    {
      "name": "viem",
      "path": "./package/_esm/index.js",
      "limit": "63 kB",
      "import": "*"
    },
    {
      "name": "viem/chains",
      "path": "./package/_esm/chains/index.js",
      "limit": "16 kB",
      "import": "*"
    },
    {
      "name": "viem/ens",
      "path": "./package/_esm/ens.js",
      "limit": "45 kB",
      "import": "*"
    },
    {
      "name": "viem (tree-shaking check)",
      "path": "./package/_esm/index.js",
      "limit": "1.5 kB",
      "import": "{ defineBlock }"
    },
    {
      "name": "viem/chains (tree-shaking check)",
      "path": "./package/_esm/chains/index.js",
      "limit": "500 B",
      "import": "{ mainnet }"
    },
    {
      "name": "viem/ens (tree-shaking check)",
      "path": "./package/_esm/ens.js",
      "limit": "19 kB",
      "import": "{ getEnsAvatar }"
    }
  ],
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run lint:fix"
  }
}
